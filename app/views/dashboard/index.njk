{% extends "layouts/default.njk" %}

{% block body %}
  <div class="wrapper">
    <header id="header">
      <div class="container">
        <h1>Docfy</h1>
        <div class="user-info">
          <p class="welcome">
            Bem vindo,<br>
            <strong>{{ username }}</strong>
          </p>
          <a href="/signout" class="btn btn-danger">
            <img src="/img/signout.svg">
          </a>
        </div>
      </div>
    </header>

    <section id="main">
      <div class="container">
        <header>
          <h2>Meus projetos (2)</h2>
          <div class="addon">
            <form action="" method="POST">
              <input type="text" name="name" placeholder="Novo projeto">
              <button type="submit" class="btn">
                <img src="/img/plus.svg">
              </button>
            </form>
          </div>
        </header>

        <section id="content">
          <div class="project-list">
            {% for project in projects %}
              <a href="#">{{ project.title }}</a>
            {% endfor %}
          </div>
        </section>
      </div>
    </section>
  </div>
{% endblock %}
